# Hugging Face write token (required for publishing dataset/model)
HF_TOKEN=

# GitHub token with repo scope (used by tools/github_setup.py to create/set repo)
GH_TOKEN=

# Set to 1 to trigger Colab browser automation via Playwright after prep.
# FIRST-TIME SETUP: Run with COLAB_AUTORUN_HEADLESS=0 to sign into your Google account
# in the Playwright Chromium window. The session is saved in COLAB_USER_DATA_DIR and
# reused for all subsequent runs (can then set COLAB_AUTORUN_HEADLESS=1).
COLAB_AUTORUN=1
COLAB_AUTORUN_SKIP_SETUP=0

# Automation tuning
# Set HEADLESS=1 after first-time Google login has been completed
COLAB_AUTORUN_HEADLESS=0
COLAB_AUTORUN_START_ONLY=0
COLAB_AUTORUN_TIMEOUT_MINUTES=180
COLAB_AUTORUN_POLL_SECONDS=30
COLAB_AUTORUN_DOWNLOAD_DIR=artifacts/colab_run
COLAB_USER_DATA_DIR=.colab_playwright_profile
